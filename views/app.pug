html
  head
    title #{title}
    link(rel="stylesheet", href="/semantic/semantic.min.css")
    style.
      .remote-cursor {
        position: absolute;
        border-left: 2px solid white;
      }
      .red-selection {
        background: rgba(219, 40, 40, 0.5) !important;
      }
      .orange-selection {
        background: rgba(242, 113, 28, 0.5) !important;
      }
      .yellow-selection {
        background: rgba(251,189,8, 0.5) !important;
      }
      .olive-selection {
        background: rgba(181,204,24, 0.5) !important;
      }
      .green-selection {
        background: rgba(33,186,69, 0.5) !important;
      }
      .teal-selection {
        background: rgba(0,181,173, 0.5) !important;
      }
      .blue-selection {
        background: rgba(33,133,208, 0.5) !important;
      }
      .violet-selection {
        background: rgba(100,53,201, 0.5) !important;
      }
      .purple-selection {
        background: rgba(163,51,200, 0.5) !important;
      }
      .pink-selection {
        background: rgba(224,57,151, 0.5) !important;
      }
      .brown-selection {
        background: rgba(165,103,63, 0.5) !important;
      }
      .grey-selection {
        background: rgba(118,118,118, 0.5) !important;
      }
    block head
  body
    .ui.basic.modal#collab-link
      i.close.icon
      .content(style="text-align: center;")
        h1 You can collaborate with others by sharing your link.
        .ui.big.label
          i.linkify.icon
          code#copy-url=url + path
        a.ui.big.label#copy-button
          code Copy
    .ui.modal#browse
      i.close.icon
      .content
        h2 Open file
      .actions(style="text-align: left;")
        .ui.relaxed.divided.list#file-list
          .item
            i.middle.aligned.file.text.icon
            .content
              a.header file.md
              .description 13 bytes
                a
                  i.trash.icon
    .ui.small.modal#save-as
      i.close.icon
      .content
        h2 Save as
        .ui.right.labeled.fluid.input
          input#file-name(type="text", placeholder="File name")
          .ui.label
            .text .md
      .actions
        .ui.positive.right.labeled.icon.button#save-btn Save
          i.save.icon
    .ui.small.modal#delete-confirm
      .content
        h2 Delete
        | Are you sure you want to delete this file?
      .actions
        .ui.basic.cancel.button Cancel
        .ui.red.ok.button Delete
    #editor(style="position: absolute; top: 31px; right: 50%; left: 0; bottom: 0;")
    .ui.mini.menu.top.fixed.inverted
      .menu#menu
        a.item#new New
        a.item#open Open
        a.item#save Save
        a.item#share Share
      .right.menu#connected
    block preview
    script(src="/jquery/jquery.min.js")
    script(src="/semantic/semantic.min.js")
    script(src="/ace/ace.js")
    script(src="/socket.io/socket.io.js")
    script(src="/marked/marked.js")
    script(src="/diff-match-patch/index.js")
    script.
      var url='#{url}';
      var roomId='#{roomId}';
    script(src="/static/app.js")
    block scripts
